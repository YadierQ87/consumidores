<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.solprob.yadierq87.consumidores.pantallas_mensajes.Msg_pt8_terminos_edicion"
    tools:showIn="@layout/activity_pantalla_select_edicion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="8dp"
        android:id="@+id/linearLayout8">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10sp"
            android:text="Le gustaria que lo ayuden a obtener Recompensas en Regalias mediante el desarrollo de su red de Consumidores y Recomendadores a obtener recompensas todos los meses, de acuerdo al cumplimiento de los TÃ©rminos y Condiciones del Reglamento del Programa de recompensa al Clientes de Clasificados Digital"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout8"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:weightSum="3"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

<RadioGroup
    android:id="@+id/radio_opcion"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioButton
        android:id="@+id/radioButtonSi"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:text="SI" />

    <RadioButton
        android:id="@+id/radioButtonNo"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10sp"
        android:text="NO" />
</RadioGroup>


        <Button
            android:id="@+id/btn_yes_video"
            style="@style/botonAmarillo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onclickContinuar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Continuar" />

    </LinearLayout>

</RelativeLayout>
