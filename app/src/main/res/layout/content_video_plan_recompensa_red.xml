<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellow"
    android:paddingBottom="50sp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.solprob.yadierq87.consumidores.pantallas_mensajes.Msg_pt6_video_plan_recompensa_red"
    tools:showIn="@layout/activity_video_plan_recompensa_red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="15dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout4">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.06"
            android:text="Plan de Recompensas en Red"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:text="Red de Recomendadores y Consumidores"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="0.86"
            android:layout_gravity="center"
            android:onClick="onClickSetUpVideoView"
            android:textAlignment="center"
            android:background="@mipmap/ic_youtube" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_weight="0.06"
            android:textColor="@color/colorblack"
            android:layout_marginTop="10dp"
           android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Ud Ha visto el video?"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:background="@color/colorWhite"

        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:weightSum="2"
        android:layout_below="@+id/linearLayout4">


        <Button
            android:id="@+id/btn_no_video"
            style="@style/botonAmarillo"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickCerrarSesion"
            android:text="No" />

        <Button
            android:id="@+id/btn_yes_video"
            style="@style/botonAmarillo"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickIntentPantallaEdiciones"
            android:text="Si" />

    </LinearLayout>

</RelativeLayout>
