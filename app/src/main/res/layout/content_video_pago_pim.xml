<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.solprob.yadierq87.consumidores.pantallas_mensajes.Msg_pt17_video_pago_pim"
    tools:showIn="@layout/activity_video_pago_pim">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="8dp"
        android:paddingBottom="30sp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/linearLayout2"
        android:layout_above="@+id/linearLayout5"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorWhite"
            style="@style/formHeading"
            android:text="Pagos  PIM"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_weight="0.04" />

        <Button
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_weight="0.03"
            android:background="@mipmap/ic_pim"
            android:onClick="onClickSetUpVideoView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0.06"
            android:textColor="@color/colorPrimaryDark"
            android:text="Ver Publicidad"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_weight="0.06"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="Ud Ha visto el video?"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="12sp"
            android:weightSum="2"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_above="@+id/linearLayout5">


            <Button
                android:id="@+id/btn_no_video"
                style="@style/botonAmarillo"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickCerrarSesion"
                android:text="No" />

            <Button
                android:id="@+id/btn_yes_video"
                style="@style/botonAmarillo"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickGo18ConfirmarPagosPim"
                android:text="Si" />

        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingTop="10sp"
        android:background="@color/colorYellowbg"
        android:layout_marginBottom="40sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout5">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:gravity="center"
            android:text="Alta PIM.com.ar Marcar en su celular *456#"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>
