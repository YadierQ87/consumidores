<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.solprob.yadierq87.consumidores.Pantalla_inicio_sesion"
    tools:showIn="@layout/activity_pantalla_inicio_sesion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/textView28"
            style="@style/formHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="!Bienvenido! Inicio de Sesión:"
            android:textColor="@color/colorblack"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/editText10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nro de Usuario"
            android:text="" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Contraseña"
            android:text="" />

        <Button
            android:id="@+id/button46"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/linea_yelllow"
            android:onClick="onClickLoginUser"
            android:text="Entrar" />

        <CheckBox
            android:id="@+id/checkBoxSesionActiva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            android:text="No cerrar Sesión" />

        <Button
            android:id="@+id/button48"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:gravity="center"
            style="@style/botonBlanco"
            android:text="Olvidaste la contraseña?"
            android:onClick="onClickOlvideMiPassword"
            android:textColor="@color/colorblack"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@color/colorYellow"
        android:paddingBottom="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="0.01"
            android:text="Todavía no esta registrado?"
            android:textAlignment="center"
            android:textColor="@color/colorblack"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button47"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/linea_blue"
            android:text="Crear Cuenta"
            android:onClick="onClickIntentCrearCuenta"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>
